{
  "name": "spokestack",
  "version": "0.3.0",
  "description": "Tools for integration with the Spokestack API in Node.js",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "npm run clean && rollup --config",
    "clean": "rm -rf dist/",
    "docs": "typedoc --plugin typedoc-plugin-markdown --hideBreadcrumbs --out docs --readme none src/index.ts src/client.ts && node tasks/docs.js",
    "format": "prettier --write \"**/*.ts\" \"**/*.js\" \"**/*.md\" \"**/*.json\"",
    "lint": "eslint \"**/*.{ts,js}\" && prettier --check \"**/*.md\" \"**/*.json\"",
    "prepublishOnly": "npm run build",
    "release": "release-it",
    "test": "npm run lint && npm run test:unit",
    "test:next": "cd examples/with-next && npm test",
    "test:unit": "cross-env TS_NODE_PROJECT=tsconfig.test.json mocha",
    "test:watch": "npm run test:unit -- -w",
    "typescript": "tsc -p tsconfig.json --noEmit"
  },
  "files": [
    "dist",
    "src",
    "MIT-License.txt",
    "README.md"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/spokestack/node-spokestack.git"
  },
  "keywords": [
    "spokestack",
    "voice",
    "node"
  ],
  "author": "Timmy Willison <4timmywil@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/spokestack/node-spokestack/issues"
  },
  "homepage": "https://github.com/spokestack/node-spokestack#readme",
  "dependencies": {
    "@google-cloud/speech": "^4.1.3",
    "@release-it/conventional-changelog": "^2.0.0",
    "node-fetch": "^2.6.1",
    "release-it": "^14.1.0",
    "uuid": "^8.3.1",
    "ws": "^7.3.1"
  },
  "devDependencies": {
    "@commitlint/cli": "^11.0.0",
    "@commitlint/config-conventional": "^11.0.0",
    "@types/express": "^4.17.8",
    "@types/mocha": "^8.0.3",
    "@types/node-fetch": "^2.5.7",
    "@types/sinon": "^9.0.8",
    "@types/uuid": "^8.3.0",
    "@types/ws": "^7.2.7",
    "@typescript-eslint/eslint-plugin": "^4.4.1",
    "@typescript-eslint/parser": "^4.4.1",
    "concurrently": "^5.3.0",
    "cross-env": "^7.0.2",
    "eslint": "^7.11.0",
    "eslint-config-prettier": "^6.12.0",
    "eslint-plugin-prettier": "^3.1.4",
    "husky": "^4.3.0",
    "mocha": "^8.1.3",
    "prettier": "^2.1.2",
    "rollup": "^2.29.0",
    "rollup-plugin-typescript2": "^0.27.3",
    "sinon": "^9.2.0",
    "ts-node": "^9.0.0",
    "typedoc": "^0.19.2",
    "typedoc-plugin-markdown": "^3.0.8",
    "typescript": "^4.0.3"
  },
  "prettier": {
    "printWidth": 100,
    "semi": false,
    "singleQuote": true,
    "jsxBracketSameLine": true,
    "arrowParens": "always",
    "trailingComma": "none"
  },
  "eslintConfig": {
    "parser": "@typescript-eslint/parser",
    "plugins": [
      "@typescript-eslint",
      "prettier"
    ],
    "extends": [
      "plugin:@typescript-eslint/recommended",
      "prettier/@typescript-eslint"
    ],
    "parserOptions": {
      "ecmaVersion": 2018,
      "sourceType": "module",
      "project": "./tsconfig.test.json"
    },
    "globals": {
      "ga": "readonly"
    },
    "rules": {
      "prettier/prettier": "error",
      "@typescript-eslint/explicit-module-boundary-types": 0,
      "@typescript-eslint/no-var-requires": 0,
      "@typescript-eslint/no-use-before-define": 0
    }
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "concurrently --raw \"npm run lint\" \"npm run typescript\" \"npm run test:next\""
    }
  },
  "release-it": {
    "hooks": {
      "after:bump": "npm run docs && git add README.md"
    },
    "git": {
      "commitMessage": "chore: release ${version}",
      "tagName": "${version}"
    },
    "npm": {
      "publish": true
    },
    "github": {
      "release": true
    },
    "plugins": {
      "@release-it/conventional-changelog": {
        "preset": "angular"
      }
    }
  }
}
