{
  "name": "spokestack-web-demo",
  "private": true,
  "version": "1.0.0",
  "description": "Spokestack web demo to search and read results using voice.",
  "main": "server/index.js",
  "scripts": {
    "build": "next build && tsc --project tsconfig.server.json",
    "clean": "rm -rf .next/",
    "dev": "nodemon",
    "eslint": "eslint .",
    "format": "prettier --write \"**/*.tsx\" \"**/*.ts\" \"**/*.js\" \"**/*.md\"",
    "lint": "concurrently --raw \"npm run type-check\" \"npm run eslint\" \"npm run prettier\"",
    "lint:fix": "concurrently --raw \"npm run type-check\" \"lint-staged\"",
    "prettier": "prettier --check \"**/*.tsx\" \"**/*.ts\" \"**/*.js\" \"**/*.md\"",
    "start": "cross-env NODE_ENV=production node dist/index.js",
    "test": "npm run lint",
    "test:encrypt": "ts-node --project tsconfig.server.json server/encryptSecret.ts",
    "type-check": "tsc -p tsconfig.json --noEmit"
  },
  "keywords": [
    "spokestack",
    "voice"
  ],
  "author": "Timmy Willison <4timmywil@gmail.com>",
  "license": "MIT",
  "dependencies": {
    "apollo-boost": "^0.4.7",
    "babel-plugin-transform-optional-chaining": "^7.0.0-beta.3",
    "body-parser": "^1.19.0",
    "color": "^3.1.2",
    "cross-env": "^7.0.2",
    "express": "^4.17.1",
    "express-fileupload": "^1.1.6",
    "graphiql": "^1.0.0-alpha.5",
    "graphql": "^15.0.0",
    "graphql-tag": "^2.10.3",
    "lodash": "^4.17.19",
    "next": "^9.3.4",
    "next-transpile-modules": "^3.2.0",
    "node-fetch": "^2.6.0",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "spokestack": "^0.1.0",
    "vscode-languageserver-types": "^3.15.1"
  },
  "devDependencies": {
    "@commitlint/cli": "^8.3.5",
    "@commitlint/config-conventional": "^8.3.4",
    "@types/color": "^3.0.1",
    "@types/dom-mediacapture-record": "^1.0.5",
    "@types/express": "^4.17.6",
    "@types/express-fileupload": "^1.1.3",
    "@types/lodash": "^4.14.150",
    "@types/node": "^13.13.5",
    "@types/node-fetch": "^2.5.7",
    "@types/react": "^16.9.34",
    "@types/shelljs": "^0.8.7",
    "@types/ws": "^7.2.4",
    "@typescript-eslint/eslint-plugin": "^2.31.0",
    "@typescript-eslint/parser": "^2.31.0",
    "concurrently": "^5.2.0",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-prettier": "^3.1.3",
    "eslint-plugin-react": "^7.19.0",
    "husky": "^4.2.5",
    "lint-staged": "^10.2.2",
    "nodemon": "^2.0.3",
    "prettier": "^2.0.5",
    "shelljs": "^0.8.4",
    "ts-node": "^8.10.1",
    "typescript": "^3.8.3"
  },
  "prettier": {
    "arrowParens": "always",
    "jsxBracketSameLine": true,
    "printWidth": 80,
    "semi": false,
    "singleQuote": true,
    "trailingComma": "none"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "env FORCE_COLOR=1 npm run lint:fix"
    }
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx}": [
      "prettier --write",
      "eslint --fix ."
    ],
    "*.md": [
      "prettier --write"
    ]
  }
}
