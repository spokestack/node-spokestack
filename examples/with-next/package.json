{
  "name": "spokestack-web-demo",
  "private": true,
  "version": "1.0.0",
  "description": "Spokestack web demo to search and read results using voice.",
  "main": "dist/index.js",
  "scripts": {
    "build": "npm run clean && tsc -p tsconfig.server.json && next build",
    "clean": "rm -rf .next/ dist/",
    "dev": "nodemon",
    "format": "prettier --write \"**/*.tsx\" \"**/*.ts\" \"**/*.js\" \"**/*.md\" \"**/*.json\"",
    "lint": "eslint \"**/*.{tsx,ts,js}\" && prettier --check \"**/*.md\" \"**/*.json\"",
    "schema": "node apollo/schema.js && graphql-codegen && prettier --write types.ts",
    "start": "cross-env NODE_ENV=production node dist/index.js",
    "test": "concurrently --raw \"npm run lint\" \"npm run typescript\"",
    "test:encrypt": "ts-node -p tsconfig.server.json server/encryptSecret.ts",
    "typescript": "tsc -p tsconfig.json --noEmit"
  },
  "keywords": [
    "spokestack",
    "voice"
  ],
  "author": "Timmy Willison <4timmywil@gmail.com>",
  "license": "MIT",
  "dependencies": {
    "apollo-boost": "^0.4.9",
    "babel-plugin-transform-optional-chaining": "^7.0.0-beta.3",
    "body-parser": "^1.19.0",
    "color": "^4.0.1",
    "cross-env": "^7.0.3",
    "express": "^4.17.1",
    "express-fileupload": "^1.2.1",
    "graphql": "^15.5.1",
    "graphql-tag": "^2.12.5",
    "lodash": "^4.17.21",
    "next": "^11.1.0",
    "node-fetch": "^2.6.1",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "spokestack": "file:../..",
    "vscode-languageserver-types": "^3.16.0"
  },
  "devDependencies": {
    "@graphql-codegen/cli": "^2.1.1",
    "@graphql-codegen/typescript": "^2.1.1",
    "@graphql-inspector/cli": "^2.7.0",
    "@types/color": "^3.0.2",
    "@types/dom-mediacapture-record": "^1.0.10",
    "@types/express": "^4.17.13",
    "@types/express-fileupload": "^1.1.7",
    "@types/lodash": "^4.14.172",
    "@types/node-fetch": "^2.5.12",
    "@types/react": "^17.0.19",
    "@types/shelljs": "^0.8.9",
    "@types/ws": "^7.4.7",
    "concurrently": "^6.2.1",
    "eslint": "^7.32.0",
    "eslint-config-next": "^11.1.0",
    "eslint-plugin-react": "^7.24.0",
    "graphql-playground-middleware-express": "^1.7.22",
    "nodemon": "^2.0.12",
    "prettier": "^2.3.2",
    "shelljs": "^0.8.4",
    "ts-node": "^10.2.1",
    "typescript": "^4.3.5"
  },
  "prettier": {
    "printWidth": 100,
    "semi": false,
    "singleQuote": true,
    "jsxBracketSameLine": true,
    "arrowParens": "always",
    "trailingComma": "none"
  },
  "eslintConfig": {
    "parser": "@typescript-eslint/parser",
    "plugins": [
      "@typescript-eslint",
      "react",
      "prettier"
    ],
    "extends": [
      "plugin:@typescript-eslint/recommended",
      "plugin:react/recommended",
      "prettier"
    ],
    "parserOptions": {
      "ecmaVersion": 2018,
      "sourceType": "module",
      "project": "./tsconfig.json",
      "ecmaFeatures": {
        "jsx": true
      }
    },
    "globals": {
      "ga": "readonly"
    },
    "settings": {
      "react": {
        "version": "detect"
      }
    },
    "rules": {
      "eqeqeq": [
        "error",
        "always",
        {
          "null": "ignore"
        }
      ],
      "prettier/prettier": "error",
      "no-unused-vars": "off",
      "@typescript-eslint/explicit-module-boundary-types": "off",
      "@typescript-eslint/no-var-requires": "off",
      "@typescript-eslint/no-use-before-define": "off",
      "@typescript-eslint/no-non-null-assertion": "off",
      "@typescript-eslint/no-unused-vars": [
        "error",
        {
          "args": "after-used",
          "argsIgnorePattern": "^_"
        }
      ]
    }
  },
  "eslintIgnore": [
    "dist",
    ".next"
  ]
}
